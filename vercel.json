{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt",
  "runtime": "python3.12",
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL connection URL from Neon"
    },
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from BotFather"
    },
    "ADMIN_IDS": {
      "description": "Comma-separated Telegram admin IDs"
    },
    "LIVERIES_DB_URL": {
      "description": "URL to liveries database JSON (optional)"
    }
  }
}
